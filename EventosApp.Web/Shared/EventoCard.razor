
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@Evento.Nome</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Class="mud-info" Icon="@Icons.Material.Filled.Android" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
                
            <MudText Typo="Typo.body2">@Evento.Descricao</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary">Mais informações</MudButton>
        </MudCardActions>
    </MudCard>
@code {
    [Parameter]
    public Evento? Evento{ get; set; }
}
