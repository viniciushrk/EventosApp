
    <MudCard>
        <MudCardMedia Image="@Pokemon.Img" Height="200" />
        <MudCardContent>
            <MudText Typo="Typo.h5">@Pokemon.Nome</MudText>
            <MudText Typo="Typo.body2">@Pokemon.Especie</MudText>
            <MudText Typo="Typo.body2">@Pokemon.Raridade</MudText>
